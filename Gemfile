source 'http://rubygems.org'
ruby '2.2.1'

# Bundle tool
gem 'bundle'

# Behaviour Driven Development with elegance
gem 'cucumber', '2.0.0'

# Use for console and doc generation
gem 'hirb'

# Calcul complexity of the code
gem 'flog'

# Page Object DSL (help reusable coding)
gem 'page-object', '1.0.3'

# Use full to debug and got interactive ruby
gem 'pry'

# Command to build clearly
gem 'rake', '10.4.2'

# Command-line documentation for ruby projects
gem 'rdoc', '4.2.0'

# Global include (not allowed since ruby 1.9.2)
gem 'require_relative', '1.0.3'

# BDD for ruby
gem 'rspec', '3.2.0'

# Autmotic ruby code style checking tool
gem 'rubocop', '0.30.0'

# Selenium webdriver (used in watir)
gem 'selenium-webdriver', '2.45.0'

# Simple syntax coloration
gem 'syntax'

# Watir for angular (extension to allow ng-model options)
gem 'watir-ng', '1.0.0'

# Webdriver-backed Watir
gem 'watir-webdriver', '0.7.0'

# Check yaml coding
gem 'yaml-lint'
